{% extends "base.html.twig" %}

{% block title %}Admin - Liste des commandes{% endblock %}

{% block body %}

    <div class="container">
        <div class="actions">
            <h2>Gestion de la liste des commandes</h2>
        </div>
            {% if commands is not empty %}

        <div class="container-table">
            <div class="container-thead">
                <p>ID</p>
                <p>Date de création</p>
                <p>Utilisateur</p>
                <p>Total</p>

            </div>
            <div class="container-tbody">
                {% for command in commands %}
                    <p>{{command.id}}</p>
                    <p>{{command.createdAt | date('d/m/Y')}}</p>
                    <p>{{command.user.name}}</p>
                    <p>{{command.total}}€</p>
                {% endfor %}
            </div>
        </div>       

            {% else %}
                <span>Aucune commande !</span>
            {% endif %}
        </div>
    </div>
{% endblock %}