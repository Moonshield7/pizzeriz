 {% extends "base.html.twig" %}

 {% block title %}Passer la commande{% endblock %}

 {% block body %}
    
    <div class="container">
    
        <h2>Votre commande :</h2>
        <div class="article">
            <span>
                {% for article in articles %}
                    {{ article.quantity}} X {{ article.pizza.name}} : {{ article.pizza.price * article.quantity }} € <br>
                {% endfor %}
            </span>
        </div>

        <div class="container-form">

            {{form_start(form)}}

                <div class="container-form-adresse">
                    <h3>Vos coordonnées</h3>

                    <div class="form-group">
                        {{form_row(form.city)}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.postalCode)}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.address)}}
                    </div>
                    <div class="form-group">
                        {{form_row(form.complement )}}
                    </div>

                    <button>
                        <a href="{{path('app_account_commande_validee')}}"><i class="fas fa-check"></i> Valider la commande</a>
                    </button>
                </div>

                {# PIZZA #}
                <div class="pizza-container">
                    <div class="pizza">
                        <div class="pepperonis">
                        <div class="pepperoni pepperoni-0"></div>
                        <div class="pepperoni pepperoni-1"></div>
                        <div class="pepperoni pepperoni-2"></div>
                        <div class="pepperoni pepperoni-3"></div>
                        <div class="pepperoni pepperoni-4"></div>
                        <div class="pepperoni pepperoni-5"></div>
                        <div class="pepperoni pepperoni-6"></div>
                        <div class="pepperoni pepperoni-7"></div>
                        <div class="pepperoni pepperoni-8"></div>
                        <div class="pepperoni pepperoni-9"></div>
                        <div class="pepperoni pepperoni-10"></div>
                        <div class="pepperoni pepperoni-11"></div>
                        <div class="pepperoni pepperoni-12"></div>
                        <div class="pepperoni pepperoni-13"></div>
                        <div class="pepperoni pepperoni-14"></div>
                        <div class="pepperoni pepperoni-15"></div>
                        <div class="pepperoni pepperoni-16"></div>
                        <div class="pepperoni pepperoni-17"></div>
                        <div class="pepperoni pepperoni-18"></div>
                        </div>
                        <div class="cuts"></div>
                            <div class="slice"></div>
                    </div>
                </div>

                <div class="hidden">
                    {{form_rest(form)}}
                </div>

            {{form_end(form)}}
        </div>
    </div>

 {% endblock %}